<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
android:orientation="vertical"
        >
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:layout_gravity="center"
            ads:adUnitId="ca-app-pub-4990616185549475/7671486558">
        </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/back"
            android:gravity="center"
            android:padding="8dp"
            android:text="Select Date of Birth"
            android:textColor="#fff"
            android:textSize="20sp">


        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
     android:inputType="date"
                android:textColor="#fff"
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="dd"
                android:textColorHint="#423F3F"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="30sp">

            </EditText>

            <EditText
                android:id="@+id/month"
                android:textColor="#fff"
                android:hint="mm"
                android:textColorHint="#423F3F"
                android:inputType="date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:background="@drawable/back"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="30sp">

            </EditText>

            <EditText
                android:inputType="date"
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1.5"
                android:textColor="#fff"
                android:hint="yyyy"
                android:textColorHint="#423F3F"

                android:background="@drawable/back"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="30sp">

            </EditText>


        </LinearLayout>


        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/back"
            android:gravity="center"
            android:padding="8dp"
            android:text="Select Today's Date"
            android:textColor="#fff"
            android:textSize="20sp">


        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:textColor="#fff"
                android:hint="dd"
                android:textColorHint="#423F3F"
                android:inputType="date"

                android:id="@+id/day1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="30sp">

            </EditText>

            <EditText
                android:id="@+id/month1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:hint="mm"
                android:textColorHint="#423F3F"
                android:inputType="date"

                android:background="@drawable/back"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="30sp">

            </EditText>

            <EditText
                android:id="@+id/year1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1.5"
                android:textColor="#fff"
                android:hint="yyyy"
                android:textColorHint="#423F3F"
                android:inputType="date"

                android:background="@drawable/back"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="30sp">

            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/back"
                android:gravity="center"
                android:padding="8dp"
                android:text="Done"
                android:textColor="#fff"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/t10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center"
                android:padding="8dp"
                android:text="clear"
                android:textColor="#fff"
                android:textSize="20sp">

            </TextView>


        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:padding="8dp"
            android:text="Time Difference"
            android:textColor="#fff"
            android:textSize="20sp">

        </TextView>

        <LinearLayout
            android:background="@drawable/back"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="- - Years - - Months - - Days"
                android:textColor="#fff"
                android:textSize="22sp">
            </TextView>

            <TextView
                android:id="@+id/t9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="- - Weeks"
                android:textColor="#fff"
                android:textSize="20sp">

            </TextView>

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="- - Days"
            android:textColor="#fff"
            android:textSize="20sp">

        </TextView>

            <TextView
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="- - Hours"
                android:textColor="#fff"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="- - Minutes"
                android:textColor="#fff"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/t7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="- - Seconds"
                android:textColor="#fff"
                android:textSize="20sp">

            </TextView>






        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:padding="8dp"
            android:text="Next Birthday"
            android:textColor="#fff"
            android:textSize="20sp">

        </TextView>
        <LinearLayout
            android:background="@drawable/back"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="- - Months - - Days"
                android:textColor="#fff"
                android:textSize="22sp">
            </TextView>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>